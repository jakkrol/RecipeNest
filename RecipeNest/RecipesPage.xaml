<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeNest.RecipesPage"
             Title="My Recipes">
    <Grid RowDefinitions="Auto, *" Padding="20">
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="🍽️ My Recipes"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <SearchBar Placeholder="Search recipes..."
                           Text="{Binding SearchText}"
                           SearchCommand="{Binding PerformSearchCommand}"
                           HorizontalOptions="Fill"/>
                <Button Text="➕"
                        Clicked="AddRecipe_Clicked"
                        WidthRequest="50"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1"
                ItemsSource="{Binding FilteredRecipes}"
                SelectionMode="Single"
                SelectionChanged="CollectionView_SelectionChanged"
                Margin="15"
                VerticalOptions="Fill">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border BackgroundColor="Black" VerticalOptions="Center" Padding="10" Margin="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>

                            <Grid HorizontalOptions="Fill" VerticalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />

                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       TextColor="White"
                                       VerticalOptions="Center"
                                       Grid.Column="0"/>

                                <Button Text="Modify"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Grid.Column="1"/>

                                <Button Text="Delete"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Grid.Column="2"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </Grid>
</ContentPage>
