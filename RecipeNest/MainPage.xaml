<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeNest.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- App Heading -->
            <Label Text="Welcome to Recipe Nest!"
                   FontSize="28"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <!-- Optional: Search Bar -->
            <!--<SearchBar Placeholder="Search for a recipe..." SearchButtonPressed="OnSearch"/>-->

            <!-- Quick Navigation -->
            <VerticalStackLayout Spacing="15">
                <Button Text="🍲 Browse Recipes" Clicked="OnBrowseRecipes" MaximumWidthRequest="500"/>
                <!--<Button Text="📂 Categories" Clicked="OnCategories"/>-->
                <Button Text="➕ Add New Recipe" Clicked="OnAddRecipe" MaximumWidthRequest="500"/>
            </VerticalStackLayout>

            <!-- Optional: Stats -->
            <Label x:Name="RecipesCount"
                   Text="{Binding RecipesCount}"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

             <!--Optional: Featured image 
            <Image Source="home_cooking.jpg"
                   HeightRequest="180"
                   Aspect="AspectFill"
                   CornerRadius="20"
                   Margin="0,20,0,0"/>-->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
