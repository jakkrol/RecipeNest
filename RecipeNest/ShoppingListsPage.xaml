<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeNest.ShoppingListsPage"
             x:Name="ListPageContext"
             Title="ShoppingListsPage">
    <Grid RowDefinitions="Auto, *" Padding="20">
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="My Shopping Lists"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                <SearchBar Placeholder="Search recipes..."
                           Text="{Binding SearchText}"
                           SearchCommand="{Binding PerformSearchCommand}"
                           HorizontalOptions="Center"
                           WidthRequest="250"/>
                <Button x:Name="AddList"
                        Text="âž•"
                        Clicked="AddList_Clicked"
                        HorizontalOptions="Center"
                        WidthRequest="50"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <CollectionView x:Name="MyCollection" Grid.Row="1"
                ItemsSource="{Binding FilteredShoppingLists}"
                SelectionMode="Single"
                SelectionChanged="MyCollection_SelectionChanged"
                Margin="15"
                VerticalOptions="Fill">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border BackgroundColor="#3B3B3B" VerticalOptions="Center" Padding="10" Margin="5" StrokeThickness="0">
                            <Grid HorizontalOptions="Fill" VerticalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       TextColor="White"
                                       VerticalOptions="Center"
                                       Grid.Column="0"/>
                                <ProgressBar Progress="{Binding ListProgress}" ProgressColor="MediumPurple" Grid.Column="1" Margin="10,0,0,0"/>

                                <HorizontalStackLayout Grid.Column="2" Margin="10,0,10,0" HorizontalOptions="End">
                                    <Button Text="âœï¸"
                                        Clicked="Update_Clicked"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"/>

                                    <Button Text="ðŸ—‘ï¸"
                                        Command="{Binding BindingContext.DeleteListCommand, Source={x:Reference ListPageContext}}"
                                        CommandParameter="{Binding .}"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Margin="10,0,0,0"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </Grid>
</ContentPage>