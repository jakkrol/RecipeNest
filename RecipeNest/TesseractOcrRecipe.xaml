<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeNest.TesseractOcrRecipe"
             Title="TesseractOcrRecipe">
    <ScrollView>
        <VerticalStackLayout Padding="30">
            <Button Text="Wybierz zdjęcie do zczytania" Clicked="OnPickPhotoClicked"/>
            <HorizontalStackLayout>
                <RadioButton Content="FullText" GroupName="ParsingModes" Value="FullText" IsChecked="True" CheckedChanged="RadioButton_CheckedChanged"></RadioButton>
                <RadioButton Content="Line" GroupName="ParsingModes" Value="Line" IsChecked="False" CheckedChanged="RadioButton_CheckedChanged"></RadioButton>
                <RadioButton Content="Column" GroupName="ParsingModes" Value="Column" IsChecked="False" CheckedChanged="RadioButton_CheckedChanged"></RadioButton>
            </HorizontalStackLayout>
            <Label x:Name="Ingredients"></Label>

            <Label x:Name="Instructions"></Label>

            <Label x:Name="OcrResultLabel" Text="Tu pojawi się tekst z OCR" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>