<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecipeNest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecipeNest"
    Title="RecipeNest">

    <Shell.ToolbarItems>
        <ToolbarItem x:Name="ThemeItem" Text="☀️" Clicked="ToolbarItem_Clicked"></ToolbarItem>
    </Shell.ToolbarItems>
    <FlyoutItem Title="Home" Route="MainPage">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Recipes" Route="RecipesPage">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:RecipesPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Shopping Lists" Route="ShoppingListsPage">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:ShoppingListsPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Recipes from internet" Route="RecipesLibraryPage">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:RecipesLibraryPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Tesseract Tests" Route="TesseractTests">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:TesseractOcrRecipe}" />
        </Tab>
    </FlyoutItem>

</Shell>
