<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecipeNest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecipeNest"
    Title="RecipeNest">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
       Title="Recipes"
       ContentTemplate="{DataTemplate local:RecipesPage}"
       Route="RecipesPage" />
    <ShellContent
        Title="Shopping Lists"
        ContentTemplate="{DataTemplate local:ShoppingListsPage}"
        Route="ShoppingListsPage" />
    <ShellContent
        Title="Tesseract Tests"
        ContentTemplate="{DataTemplate local:TesseractOcrRecipe}"
        Route="TesseractTests" />
</Shell>
